import spacy
nlp = spacy.load("en_core_web_sm")
doc = nlp("Worked in a restaurant helping customers")
print([token.text for token in doc])

import spacy
from nltk.corpus import stopwords

nlp = spacy.load("en_core_web_sm")
stop_words = set(stopwords.words("english"))

def simulate_rephrase(text, job_title=None):
    doc = nlp(text)
    verbs = [token.lemma_ for token in doc if token.pos_ == "VERB" and token.text.lower() not in stop_words]
    nouns = [token.text for token in doc if token.pos_ in ["NOUN", "PROPN"] and token.text.lower() not in stop_words]

    action = verbs[0] if verbs else "Handled"
    object_ = " ".join(nouns[:2]) if nouns else "customer interactions"

    phrased = f"{action.capitalize()} {object_} in a professional setting"
    if job_title:
        phrased += f", aligning with responsibilities of a {job_title}"

    return phrased

print(simulate_rephrase("Worked in a restaurant helping customers", job_title="Customer Success Specialist"))
